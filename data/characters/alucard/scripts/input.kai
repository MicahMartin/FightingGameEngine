      }
      if(kick){
        $change_state 19; 
      }
      if(punch){
        $change_state 18; 
      }



      if(aboveMinHeight and hasAirAction and dash_f){
        $change_state 12; 
      }

      if(aboveMinHeight and hasAirAction and dash_b){
        $change_state 13; 
      }
    }
  }
  


