      }

      if(upback){
        $change_state 7; 
      }

      if(up){
        $change_state 5; 
      }

      if(anyDown and stateNum != 4){
        $change_state 4; 
      }

      if(forward and stateNum != 2){
        $change_state 2; 
      }
      if(back and stateNum != 3){
        $change_state 3; 
      }
      if(neutral and stateNum != 1){
        $change_state 1; 
      }
    }

    if (airborne) {
      if (lp_and_lk) {
